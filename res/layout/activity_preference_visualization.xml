<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation= "vertical" 
    tools:context=".PreferenceVizActivity"
    android:parentActivityName="com.lsu.vizeq.HostMenuActivity" >
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation=   "horizontal"
        style ="?android:attr/buttonBarButtonStyle">
        
        <Button
        android:id="@+id/SortByArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artists"
        android:layout_margin="10dp"
        android:onClick="sortByArtist" />

        <Button
        android:id="@+id/SortByAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albums"
        android:layout_margin="10dp"
        android:onClick="sortByAlbum" />
        
        <Button
        android:id="@+id/SortByTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracks"
        android:layout_margin="10dp"
        android:onClick="sortByTrack" />
     
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/vizlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </RelativeLayout>
        

</LinearLayout>
